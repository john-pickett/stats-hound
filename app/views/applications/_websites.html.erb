<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.name %></td>
        <td><%= application.url %></td>
        <td><%= application.created_at.to_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Delete', application, method: :delete, data: { confirm: 'Are you sure you want to delete this website? This cannot be undone.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
