<!DOCTYPE html>
<html>
  <head>
    <title>Stats Hound</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div>
        <ul class="nav nav-tabs">
          <li><%= link_to "Home", root_path%></li>
            <% if current_user %>
              <li><%= link_to "Your Websites", applications_path %></li>
              <li class="pull-right"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <li class="pull-right"><%= link_to "Hi, #{current_user.email}", edit_user_registration_path %></li>
            <% else %>
              <li class="pull-right"><%= link_to 'Sign Up', new_user_registration_path %></li>
              <li class="pull-right"><%= link_to 'Login', new_user_session_path %></li>
            <% end %>
        </ul>
      </div>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <div class="content">
        <%= yield %>
      </div>
    </div>
    <footer>
      <hr class="footer-divider">
      Copyright &copy: 2017 Stats Hound
    </footer>
  </body>
</html>
